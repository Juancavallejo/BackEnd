<h2 class="text-center my-4"> Registro de usuario</h2>
<div class="container">
    {{#if error}}
    <div class="mx-auto border border-dark border w-25 m-4">
        <h4 class="text-center text-danger">{{error}}</h4>
    </div>
    {{/if}}
    <div class="d-flex justify-content-center">
        <form method="POST" action="/registro" class="mx-auto border border-primary border-2">
            <div class="px-4 pt-4">
                <label>Ingresa tu nombre de usuario</label>
                <input type="text" name="user" />
            </div>
            <div class="px-4 pt-4">
                <label>Ingresa tu correo electronico</label>
                <input type="email" name="email" />
            </div>
            <div class="px-4 pt-4">
                <label>Ingresa tu contraseña</label>
                <input type="password" name="password" />
            </div>
            <div class="px-4 pt-4">
                <label>Ingresa tu dirección</label>
                <input type="address" name="address" />
            </div>
            <div class="px-4 pt-4">
                <label>Ingresa tu edad</label>
                <input type="number" name="age" />
            </div>
            <div class="px-4 pt-4">
                <label>Ingresa tu celular</label>
                <input type="text" name="phone" />
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-success m-3">Enviar</button>
            </div>
            <div class="d-flex justify-content-center border-top border-secondary border-2">
                <p class="mt-4"> Ya tienes una cuenta? Ve a Login </p>
                <a href="/login" class="btn btn-primary m-3"> Login</a>
            </div>
        </form>
    </div>
</div>
